# Application
APP_NAME=scale-pos
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=UTC
APP_KEY=

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=scale_pos
DB_USERNAME=root
DB_PASSWORD=

# Cache & Session
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false

# Security
JWT_SECRET=
JWT_TTL=3600
JWT_REFRESH_TTL=20160
HASH_ALGO=bcrypt
ENCRYPTION_KEY=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1

# Locale
CURRENCY_SYMBOL=$
CURRENCY_CODE=USD
LOCALE=en
TIMEZONE=UTC

# Mail (optional)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@scale-pos.local
MAIL_FROM_NAME="${APP_NAME}"

# Backup
BACKUP_ENABLED=true
BACKUP_PATH=/storage/backups

# Logging
LOG_CHANNEL=single
LOG_LEVEL=debug
